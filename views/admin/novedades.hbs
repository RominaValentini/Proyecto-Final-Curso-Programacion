<body style="background-color: rgb(211, 242, 252);">
    <div class="container" style="margin-top: 100px;">
        <div class="row">
            <div class="col">
                <p class="float-center">
                    <span style="font-weight: bolder;">Hola {{usuario}}!</span>
                    <br>
                    <br>
                    <a href="/admin/login/logout" class="btn btn-info"> <span
                            style="color: blue; font-weight: bolder;">Cerrar sesión</span>
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-3" style="margin-top: 15px;">
                <h2>Lista de Novedades</h2>
            </div>
            <div class="col-9 text-right offset-md-11" style="margin-top: 15px;">
                <a href="/admin/novedades/agregar" class="btn btn-info"><i class="fas fa-plus"></i><span
                        style="font-weight: bolder;">Nuevo</span></a>
            </div>
        </div>

        <div class="row" style="margin-top: 15px;">
            <div class="col-3 text-right offset-md-9">
                <form class="form-inline d-flex" action="/admin/novedades" method="get">
                    <input class="form-control" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if
                        q}} value="{{q}}" {{/if}}>
                    <button class="btn btn-info" type="submit"><i class="fa fa-search" aria-hidden="true"></i>
                    </button>
                </form>
            </div>
        </div>

        <div class="row" style="margin-top: 15px;">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr class="table-light">
                            <th scope="col">#</th>
                            <th scope="col">Título</th>
                            <th scope="col">Subtítulo</th>
                            <th scope="col">Cuerpo</th>
                            <th scope="col">Imagen</th>
                            <th scope="col" class="text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td>
                            <td>{{subtitulo}}</td>
                            <td>{{cuerpo}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-right">
                                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-info"><i
                                        class="fas fa-pencil-alt"></i></a>
                                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-info"><i
                                        class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{#if is_search}}
                {{#unless novedades.length}}
                No se encontraron resultados para "<b>{{q}}</b>"
                {{/unless}}
                {{/if}}
            </div>
        </div>
    </div>
</body>